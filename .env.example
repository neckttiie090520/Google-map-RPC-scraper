# Google Maps RPC Scraper Configuration
# Copy this file to .env and customize the values

# ==================== LANGUAGE & REGION ====================
# Combined language-region setting
# Options: th (Thai), en (English), ja (Japanese), zh (Chinese)
LANGUAGE_REGION=th

# ==================== SCRAPER SETTINGS ====================
# Maximum reviews to scrape per place
# 0 or empty = unlimited (auto-detect from place data)
DEFAULT_MAX_REVIEWS=2000

# Default date range filter
# Options: 1month, 6months, 1year, 5years, 7years, all, custom
DEFAULT_DATE_RANGE=1year

# Custom date range (only used if DEFAULT_DATE_RANGE=custom)
# Format: DD/MM/YYYY
CUSTOM_START_DATE=01/01/2024
CUSTOM_END_DATE=31/12/2024

# ==================== PERFORMANCE ====================
# Fast mode: true = 50-150ms delays (26-40+ reviews/sec)
#            false = 500-1500ms delays (~10 reviews/sec)
FAST_MODE=true

# Maximum requests per second (rate limiting)
# Lower values are safer but slower
MAX_RATE=10.0

# Request timeout in seconds
TIMEOUT=30.0

# Maximum retry attempts for failed requests
MAX_RETRIES=3

# ==================== ANTI-BOT PROTECTION ====================
# Enable proxy rotation (optional, for enhanced anonymity)
USE_PROXY=false

# Comma-separated list of proxy URLs
# Formats: http://proxy:port, https://proxy:port, socks5://proxy:port
# Example: http://proxy1.example.com:8080,http://proxy2.example.com:8080
PROXY_LIST=

# ==================== SEARCH SETTINGS ====================
# Maximum search results to return
MAX_SEARCH_RESULTS=10

# ==================== WEB APPLICATION ====================
# Auto-save scraped data
AUTO_SAVE=true

# Show notifications in web UI
SHOW_NOTIFICATIONS=true

# Auto-refresh task list (in seconds)
AUTO_REFRESH=5

# Default export format
# Options: json, csv, both
DEFAULT_EXPORT=both

# ==================== OUTPUT SETTINGS ====================
# Output directory for scraped data (relative to project root)
OUTPUT_DIR=outputs

# ==================== ADVANCED ====================
# Enable debug mode (verbose logging)
DEBUG=false

# Enable CORS for web application (comma-separated origins)
# Use * to allow all origins (not recommended for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Flask secret key (change in production)
SECRET_KEY=google-maps-scraper-secret-key-2025
